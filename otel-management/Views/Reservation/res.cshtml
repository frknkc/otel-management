@{
    ViewData["Title"] = "Rezervasyon Yap";
}
@model List<RoomViewModel>



<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center"> @ViewData["Title"]</h1>
    </div>
</div>
ü

<div class="container">
    <div class="reservation-form">
        <form asp-controller="Reservation" asp-action="Reservation" method="post">
            <div class="form-group">
                <label for="check-in-date">Giriş Tarihi:</label>
                <input type="date" name="checkInDate" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="check-out-date">Çıkış Tarihi:</label>
                <input type="date" name="checkOutDate" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="guest-count">Kişi Sayısı:</label>
                <input type="number" name="guestCount" class="form-control" min="1" required>
            </div>
            <button type="submit" class="btn btn-info btn-sm text-white" onclick="return confirm('Hizmetin rezervasyonunu yapmak istediğinize emin misiniz?')">
                <i class="fa-regular fa-cross fa-bounce fa-xs"></i> Rezervasyon Yap
            </button>
        </form>
    </div>
</div>
