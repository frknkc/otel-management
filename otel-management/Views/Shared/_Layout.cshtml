<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - otel_management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/toastrjs/toastr.css" />

    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/otel_management.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black text-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Feka Otel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Odalar">Odalar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Hizmetler">Hizmetler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {

                             <li class="nav-item ms-auto">
                                     <a class="navbar-brand text-white" asp-area="" asp-controller="Account" asp-action="Profile"><i class="fa-solid fa-user"></i> @User.FindFirst("Username").Value.ToUpper()</a>
                          </li>
                          <li class="nav-item">
                                     <a class="navbar-brand text-white" asp-area="" asp-controller="Account" asp-action="Logout"><i class="fa-solid fa-right-to-bracket"></i> Çıkış Yap</a>
                          </li>
                          if (User.IsInRole("admin"))
                            {
                                               <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle text-white text-large" asp-action="Index" asp-controller="Admin" role="button" data-bs-toggle="dropdown" aria-expanded="false">Administrator</a>
                                            <ul class="dropdown-menu">
                                                <li><a asp-action="Index" asp-controller="User" class="dropdown-item">Users</a></li>
                                            </ul>
                                        </li>
                            }
                              
                        }
                        else
                        {
                            <li class="nav-item ms-auto">
                                <a class="navbar-brand text-white" asp-area="" asp-controller="Account" asp-action="Login"><i class="fa-solid fa-right-to-bracket fa-beat"></i> Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="navbar-brand text-white" asp-area="" asp-controller="Account" asp-action="Register"><i class="fa-solid fa-user-plus fa-beat"></i> Kayıt Ol</a>
                            </li> 
                        }
                        <ul/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom ">
        <div class="container">
            &copy; 2023 - otel_management - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastrjs/toastr.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
